#!/usr/bin/env ruby

if ARGV.empty?
  puts 'Usage: pattern ...'
  exit
end

$:.unshift File.join File.dirname(__FILE__), '..', 'lib'

require 'specter'

specter = Specter.new

patterns = Clap.run ARGV, {
  '-r' => lambda { |filename| specter.requires.push File.join Dir.pwd, filename }
}

specter.patterns.push(*patterns)

if specter.filenames.any?
  success = specter.run

  exit 1 unless success
end
